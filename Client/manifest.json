{
  "name": "Synchronize",
  "version": "1.0.0",
  "description": "This is a test chrome extension",
  "manifest_version": 3,
  "author": "Mesh",
  "action": {
    "default_popup": "Client/index.html",
    "default_title": "Capstone Project"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/*",
        "https://www.youtube.com/*"
      ],
      "js": [
        "Constants/Constants.js",
        "Bridge/bridge.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": [
        "https://www.netflix.com/*",
        "https://www.youtube.com/*",
        "http://localhost:8080/*"
      ],
      "js": [
        "Constants/Constants.js",
        "Player/Platforms/NetflixPlayer.js",
        "Player/Platforms/YouTubePlayer.js",
        "Player/Player.js",
        "Socket/Socket.js",
        "Signalling/Server.js",
        "Signalling/SignallingServer.js",
        "Connections/PeerConnectionEntity.js",
        "Connections/ExperienceSession.js",
        "Connections/PeerEntity.js",
        "Client/client.js"
      ],
      "all_frames": true,
      "world": "MAIN"
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://www.netflix.com/*",
      "https://www.youtube.com/*"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self' http://localhost:8080"
  },
  "permissions": [
    "scripting",
    "tabs",
    "notifications",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}