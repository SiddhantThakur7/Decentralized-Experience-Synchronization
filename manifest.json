{
  "name": "Synchronize",
  "version": "1.0.0",
  "description": "This is a test chrome extension",
  "manifest_version": 3,
  "author": "Mesh",
  "action": {
    "default_popup": "Client/name.html",
    "default_title": "Capstone Project"
  },
  "background": {
    "service_worker": "dist/service_bundle.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "Chat/chat.html",
        "Chat/message.html",
        "Video/video.html"
      ],
      "matches": [
        "https://www.netflix.com/*",
        "https://www.youtube.com/*",
        "http://localhost:8080/*",
        "https://decentralized-experience-synchronization.onrender.com/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/*",
        "https://www.youtube.com/*",
        "http://localhost:8080/*",
        "https://decentralized-experience-synchronization.onrender.com/*"
      ],
      "js": [
        "dist/main_bundle.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "https://www.netflix.com/*",
        "https://www.youtube.com/*",
        "http://localhost:8080/*",
        "https://decentralized-experience-synchronization.onrender.com/*"
      ],
      "js": [
        "dist/client_bundle.js"
      ],
      "all_frames": true,
      "world": "MAIN"
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://www.netflix.com/*",
      "https://www.youtube.com/*"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self' http://localhost:8080; ws://localhost:8080; https://decentralized-experience-synchronization.onrender.com/*; ws://decentralized-experience-synchronization.onrender.com;"
  },
  "permissions": [
    "scripting",
    "tabs",
    "notifications",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}